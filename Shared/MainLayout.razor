@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

    <Layout Class="layout">
        <Header>
            <div class="logo" />
            <Menu class="centerStyle" Mode="MenuMode.Horizontal" DefaultSelectedKeys=@(new[]{"1"})>
                <MenuItem @onclick="go_to_programing" Key="1"><Icon Width="40px" Height="40px" Type="code" Theme="outline" />Programing</MenuItem>
                <MenuItem @onclick="go_to_3d" Key="2"><Icon Width="40px" Height="40px" Type="code-sandbox" Theme="outline" />3D Modeling</MenuItem>
            </Menu>
        </Header>
        <Content Style="padding: 0 50px;">
            @Body
        </Content>
        <Footer Style="text-align: center; font-family: 'Rajdhani', sans-serif; ">Created by BAHAA TUFFAHA - 2022 </Footer>
    </Layout>

    <style>
    @@import url('https://fonts.googleapis.com/css2?family=Rajdhani&display=swap');
    .centerStyle {
        position: relative;
        display: flex;
        justify-content: center;
        background-color: #14213d;
        color: white;
        font-family: jd_code;
        font-size: 30px;
    }

    .ant-menu-item-selected {
        background-color: #b4effe !important;
    }
    .ant-menu-item:hover {
        background-color: white !important;
    }

    .site-layout-content {
        background-color: #14213d;
        padding: 24px;
        min-height: 580px;
    }
    .ant-layout-header {
        background-color: #14213d
    }
    .ant-layout-content {
        background-color: #14213d;

    }


    #components-layout-demo-top .logo {
        width: 120px;
        height: 31px;
        @*background: rgba(255, 255, 255, 0.2);*@
        margin: 16px 24px 16px 0;
        @* float: left;*@

        }
    </style>
    @code {
        @*
            MenuTheme theme = MenuTheme.Light;
            void go_dark()
            {
                if (theme == MenuTheme.Light)
                {
                    theme = MenuTheme.Dark;
                }
                else {
                    theme = MenuTheme.Light;
                }
            }
        *@

        void go_to_programing()
        {
            NavigationManager.NavigateTo("/");
        }
        void go_to_3d()
        {
            NavigationManager.NavigateTo("/3d");
        }
    }